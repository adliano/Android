<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff006431" />
            <stroke
                android:width="2dp"
                android:color="#ff43ee1b" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="40dp"
                android:top="10dp"
                android:right="40dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff43ee1b"
                android:endColor="#ff006431"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff006431" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="40dp"
                android:top="10dp"
                android:right="40dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>