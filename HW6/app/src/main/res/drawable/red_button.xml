<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff720300" />
            <stroke
                android:width="1dp"
                android:color="#ffff0057" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="40dp"
                android:top="10dp"
                android:right="40dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff0000"
                android:endColor="#ff540300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff720300" />
            <corners
                android:radius="25dp" />
            <padding
                android:left="40dp"
                android:top="10dp"
                android:right="40dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>